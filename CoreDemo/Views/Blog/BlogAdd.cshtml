@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<style>
    /* Form etiketleri için stil */
    label {
        display: block;
        font-weight: bold;
        margin-top: 10px;
    }

    /* Input alanları için stil */
    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 10px;
        font-size: 16px;
    }

    /* Hata mesajları için stil */
    .field-validation-error {
        color: red;
    }

    /* Buton stil */
    button {
        background-color: #333;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    /* Sayfa başlık stil */
    h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* İçerik aralıkları */
    br {
        margin-bottom: 10px;
    }
</style>

<h1>Yeni Blog Girişi</h1>
<br />
@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("İçerik Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogTitle)
    <br />
    @Html.Label("Görsel")
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogImage)
    <br />
    @Html.Label("Küçük Görsel")
    @Html.TextBoxFor(x => x.BlogThumbnailImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogThumbnailImage)
    <br />
    @Html.Label("Kategori")
    @* @Html.DropDownListFor(x => x.CategoryID , (List<SelectListItem>) ViewBag.cv, new {@class = "form-control" }) *@
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryID)
    <br />
    @Html.Label("İçerik")
    @Html.TextAreaFor(x => x.BlogContent, 30, 3, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BlogContent)
    <br />
    <button class="btn btn-dark">Blog Oluştur</button>
    <br />
}
